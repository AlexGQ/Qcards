<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height= "match_parent"
   android:orientation="vertical">
   
    <!-- Card Image -->
   <ImageView
       android:id="@+id/card_image"
       android:layout_width="match_parent"
 	   android:layout_height="wrap_content"
 	   android:layout_marginLeft="-1dip"
 	   android:layout_marginRight="-1dip"
       android:adjustViewBounds="true" />
   
   <LinearLayout 
   android:layout_width="wrap_content"
   android:layout_height= "match_parent"
   android:paddingLeft="16dp"
   android:paddingRight="16dp"
   android:background="#FFFFFF"
   android:orientation="vertical">
   

	<!-- Person Name-->
   <TextView
	   android:id="@+id/person_name"
	   android:layout_width="fill_parent"
	   android:layout_height="wrap_content"
	   android:layout_marginTop="10dip"
	   android:textColor="#FF69B4"
	   android:textStyle="bold"
	   android:textSize="20dip"/>
   
   <!-- Job Position -->
   <TextView
	   android:id="@+id/jobposition"
	   android:layout_width="fill_parent"
	   android:layout_height="wrap_content"
	   android:layout_marginTop="1dip"
	   android:textColor="#FF69B4"
	   android:textSize="16dip"/>
   
   <!-- City Company -->
   <TextView
	   android:id="@+id/citycompany"
	   android:layout_width="fill_parent"
	   android:layout_height="wrap_content"
	   android:layout_marginTop="1dip"
	   android:textColor="#FF69B4"
	   android:textSize="16dip"/>
	
	<!-- Company Name -->
   <TextView 
       android:id="@+id/company"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dip"
       android:textColor="#000000"
       android:typeface="sans"
       android:textSize="18dip"
       android:textStyle="bold" />
   
   
	
	   <!-- Description of the company -->
   <WebView
       android:id="@+id/description"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_marginTop="0dip"
       android:gravity="left"
       android:textSize="16dip"/>
	   
   <!-- Connections -->
   <TextView
       android:id="@+id/connections"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dip"
       android:textColor="#000000"
       android:typeface="sans"
       android:textSize="13dip"
       android:textStyle="bold" 
       android:text="CONNECTIONS"/>
   
   <!-- Line -->
    <View
       android:id="@+id/SplitLine1"
       android:layout_width="match_parent"
       android:layout_height= "2dp"
       android:layout_marginTop="10dip"
       android:background="#d3d3d3" />
	    
    <LinearLayout android:id="@+id/link_icons1"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_marginTop="20dip"
    	android:paddingLeft="16dp"
    	android:paddingRight="16dp"
    	android:orientation="horizontal" >
	    
    	<ImageView
	        android:id="@+id/image_icon1" 
        	android:layout_width="0dp"
	        android:layout_weight="0.2"
        	android:layout_height="wrap_content"
        	android:src="@drawable/ic_twitter"
        	android:layout_alignParentLeft="true" />
		    
		<ImageView 
		    android:id="@+id/image_icon2"
		    android:layout_width="0dp"
	        android:layout_weight="0.2"
		    android:layout_height="wrap_content"
		    android:src="@drawable/ic_whatsapp"
		    android:layout_toRightOf="@id/image_icon1" />
		    
	    <ImageView
	        android:id="@+id/image_icon3"
	        android:layout_width="0dp"
	        android:layout_weight="0.2"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ic_linkedin"
	        android:layout_toRightOf="@id/image_icon2"
	        android:layout_centerVertical="true"/>
		    
	    <ImageView
	        android:id="@+id/image_icon4" 
	        android:layout_width="0dp"
	        android:layout_weight="0.2"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ic_googleplus"
	        android:layout_toRightOf="@id/image_icon3"
	        android:layout_centerVertical="true"/>
	    
	  </LinearLayout>
	  
    <LinearLayout android:id="@+id/link_icons2"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_marginTop="20dip"
    	android:paddingLeft="16dp"
    	android:paddingRight="16dp"
    	android:orientation="horizontal" >
		    
	    <ImageView
	        android:id="@+id/image_icon5" 
	        android:layout_width="0dp"
	        android:layout_weight="0.2"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ic_youtube"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"/>
		    
	    <ImageView
	        android:id="@+id/image_icon6" 
	        android:layout_height="wrap_content"
	        android:layout_width="0dp"
	        android:layout_weight="0.2"
	        android:src="@drawable/ic_facebook"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"/>
	    
	    <ImageView
	        android:id="@+id/image_icon7" 
	        android:layout_width="0dp"
	        android:layout_weight="0.2"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ic_phone"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"/>
		    
	    <ImageView
	        android:id="@+id/image_icon8" 
	        android:layout_height="wrap_content"
	        android:layout_width="0dp"
	        android:layout_weight="0.2"
	        android:src="@drawable/ic_gmail"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"/>
	    
	 </LinearLayout>
	 </LinearLayout>

 </LinearLayout>		 

